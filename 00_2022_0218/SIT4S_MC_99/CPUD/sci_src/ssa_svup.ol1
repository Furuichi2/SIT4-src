	.export		_SCI0_MAIN;
	.export		_ER0_INT;
	.export		_RX0_INT;
	.export		_TX0_INT;
	.export		_TE0_INT;

_SCI0_MAIN:
	SUB_START
	PUSH_ALL

	MOV.L	#_sci0_wkram,R0				;
	LDC.L	R0,GBR					;

	MOV.W	@(RX_END,GBR),R0			; 全ﾃﾞｰﾀ受信完
	TST	R0,R0
	BF	_SCI0_M050
	M_BRA	_SCI0_MEND

_SCI0_M050:
	XOR	R0,R0
	MOV.W	R0,@(RX_END,GBR)			; 全ﾃﾞｰﾀ受信完

	MOV.L	#_sci0_rxd_buf+_CMND,R1
	MOV.B	@R1,R0
	CMP/EQ	#_LOD_CMND_WR,R0			; ﾗｲﾄｺﾏﾝﾄﾞ?
	BF	_SCI0_M100				; いいえ

	FAR_JSR	#_LOD_CMND_WR_PRO,R1			; ﾗｲﾄｺﾏﾝﾄﾞ受信時の処理

_SCI0_M100:
	CMP/EQ	#_LOD_CMND_RD,R0			; ﾘｰﾄﾞｺﾏﾝﾄﾞ?
	BF	_SCI0_M150				; いいえ
                                                        
	FAR_JSR	#_LOD_CMND_RD_PRO,R1			; ﾘｰﾄﾞｺﾏﾝﾄﾞ受信時の処理

_SCI0_M150:
	M_BRA	_SCI0_MEND

_SCI0_MEND:
	POP_ALL
	SUB_END
	M_RTS


