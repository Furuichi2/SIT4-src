	TST	R1,R1					; 準備完？
	BF	_VUP_M999				; いいえ

	MOV.W	#H'01,R0
	MOV.W	R0,@(VUP_DATA_WR_SH,GBR)		; ﾊﾞｰｼﾞｮﾝUPﾃﾞｰﾀﾌﾗｯｼｭWRITE完了  PCへ
