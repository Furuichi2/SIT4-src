	SH2_WAIT	_Wait1u, R3
	SH2_WAIT	_Wait1u, R3

	MOV.B	@(0,R11),R0				; FLMCR0 ADR READ
	MOV.W	#_FWESET,R2
	AND	R2,R0
	TST	R0,R0					; FWE ON ?
	BF	_SH2_FROM_ERS_START			; YES
	NOP
	M_BRA	_FE_VERFY_NG				; NO

_SH2_FROM_ERS_START:
	MOV.L	#0,R9

	MOV.L	@(8,R10),R0				; R0 <- _EBR ADR
	MOV.L	@(12,R10),R2				; R2 <- _EBR BIT
