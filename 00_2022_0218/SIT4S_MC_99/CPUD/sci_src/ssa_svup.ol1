	MOV.B	@R10+,R0				; 領域ｱﾄﾞﾚｽ(L)		20
	MOV.B	R0,@R1
	ADD	#1,R2					; ﾃﾞｰﾀ数ｶｳﾝﾀ+1
	ADD	R0,R3					; BCC加算
	ADD	#1,R1					; ﾊﾞｯﾌｧｱﾄﾞﾚｽ+1

	MOV.B	@R10+,R0				; 領域ｱﾄﾞﾚｽ(M)		21
	MOV.B	R0,@R1
	ADD	#1,R2					; ﾃﾞｰﾀ数ｶｳﾝﾀ+1
	ADD	R0,R3					; BCC加算
	ADD	#1,R1					; ﾊﾞｯﾌｧｱﾄﾞﾚｽ+1

	MOV.B	@R10+,R0				; 領域ｱﾄﾞﾚｽ(H)		22
	MOV.B	R0,@R1
	ADD	#1,R2					; ﾃﾞｰﾀ数ｶｳﾝﾀ+1
	ADD	R0,R3					; BCC加算
