	SH2_WAIT	_Wait10u, R3

	MOV.L	@(4,R10),R0				; R0 <- _FLMCR ADR
	MOV.B	@(R0,R11),R1
	MOV.W	#_ESUCLEAR,R2
	AND	R2,R1
	MOV.B	R1,@(R0,R11)				; ESU CLEAR

	SH2_WAIT	_Wait10u, R3
	SH2_WAIT	_Wait10u, R3

	MOV.L	@(4,R10),R0				; R0 <- _FLMCR ADR
	MOV.B	@(R0,R11),R1
	MOV.W	#_EVSET,R2
	OR	R2,R1
	MOV.B	R1,@(R0,R11)				; EV SET

	SH2_WAIT	_Wait6u, R3
	SH2_WAIT	_Wait6u, R3

