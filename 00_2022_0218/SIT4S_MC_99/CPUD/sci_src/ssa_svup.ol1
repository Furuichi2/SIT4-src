	MOV.L	@(20,R10),R8				; R8 <- ﾌﾞﾛｯｸ最終ｱﾄﾞﾚｽ
	MOV.L	#H'FFFFFFFF,R6

_SH2_FE_VERFY_1:					; << ERASE VERIFY >>
	MOV.L	R6,@R4					; FF DUMMY WIRITE

