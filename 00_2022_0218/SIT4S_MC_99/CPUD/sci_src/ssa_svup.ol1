	MOV.W	@(VUP_SEL_PC,GBR),R0			; ﾊﾞｰｼﾞｮﾝUP種別
	CMP/EQ	#8,R0					; BOOTﾌﾟﾛｸﾞﾗﾑを含むﾊﾞｰｼﾞｮﾝUP？
	BT	_SH2_FE_LOOP				; はい

