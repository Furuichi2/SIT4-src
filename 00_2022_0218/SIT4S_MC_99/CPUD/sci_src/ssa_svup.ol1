	MOV.B	R1,@(R0,R11)				; SWE CLEAR

	SH2_WAIT	_Wait100u, R3
	SH2_WAIT	_Wait100u, R3

	MOV.W	#0,R0
	M_BRA	_SH2_ORG_FEV_END

