	MOV.B	R0,@R1
	ADD	#1,R2					; ﾃﾞｰﾀ数ｶｳﾝﾀ+1
	ADD	R0,R3					; BCC加算
	ADD	#1,R1					; ﾊﾞｯﾌｧｱﾄﾞﾚｽ+1

	MOV.W	#H'1,R0					; CMND			13
	MOV.B	R0,@R1
	ADD	#1,R2					; ﾃﾞｰﾀ数ｶｳﾝﾀ+1
	ADD	R0,R3					; BCC加算
