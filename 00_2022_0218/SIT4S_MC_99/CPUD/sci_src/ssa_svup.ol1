	mov.l	#SR_Init_SCIEI,r0
	ldc	r0,sr					; SR set (SCI割込み(E)だけ許可)

	MOV.W	@(VUP_SEL_PC,GBR),R0			; ﾊﾞｰｼﾞｮﾝUP種別
	SHLL2	R0
	SHLL	R0
	MOV.L	#_FROM_TO_SRAM_TABLE,R1
	ADD	R0,R1
	MOV.L	@R1,R0
	JSR	@R0
	NOP

	MOV.W	#H'01,R0				; ﾊﾞｰｼﾞｮﾝUP開始
	MOV.W	R0,@(VUP_STR_SH,GBR)			; ﾊﾞｰｼﾞｮﾝUP開始準備完了  PCへ
