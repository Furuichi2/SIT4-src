_SH2_FROM_ERASE:
	SUB_START

	MOV.L	@(4,R10),R0				; R0 <- _FLMCR ADR
	MOV.B	@(R0,R11),R1
	MOV.W	#_SWESET,R2
	OR	R2,R1
